<section class="ui raised segment">
    <div class="ui grid">

        <article class="sixteen wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Details</th>
                    <th>Rating</th>
                    <th>Island</th>
                    <th>Member</th>
                </tr>
                </thead>
                <tbody>
                {{#each reviews}}
                    <tr>
                        <td> {{reviewName}}</td>
                        <td> {{reviewDetails}} </td>
                        <td> {{rating}} </td>
                        <td> {{point.name}}</td>
                        <td> {{member.firstName}} {{member.lastName}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>