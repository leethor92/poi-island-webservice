<section class="ui raised segment">
  <div class="ui grid">
    <aside class="six wide column">
      <img src="images/google.jpg" class="ui medium image">
    </aside>
    <article class="eight wide column">
      <table class="ui celled table segment">
        <thead>
          <tr>
            <th>Name</th>
            <th>Details</th>
            <th>Member</th>
            <th>Category</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each points}}
            <tr>
              <td> {{name}} </td>
              <td> {{details}} </td>
              <td> {{member.firstName}} {{member.lastName}}</td>
              <td> {{category}} </td>
              <td><a href="/pointlist/updatepoi/{{point.id}}"><button class="ui blue button">Update</button></a></td>
              <td><a href="/pointlist/deletePoint/{{point.id}}"><button class="negative ui right floated button">Delete</button></a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </article>
  </div>
</section>